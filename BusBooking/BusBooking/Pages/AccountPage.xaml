                    <EntryCell Text="{Binding UserPersonalDetail.IdentificationNumber}" />
                    <EntryCell Text="{Binding UserPersonalDetail.ContactNumber}" />
                </TableSection>
            </TableRoot>
        </TableView>-->
    </ContentPage.Content>
</ContentPage>